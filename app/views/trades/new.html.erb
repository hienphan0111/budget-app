<div class="h-full flex flex-col">
  <%= render partial: 'shared/header_bar', locals: { url: categories_path, title: 'NEW TRADE' }%>

  <%= form_with model: Trade.new, url: category_trades_path(@category), method: :post, local: true, html: { class: 'flex flex-col justify-between items-center h-full space-y-3 bg-gray-200'} do |f| %>
    <div class="flex flex-col w-[95%] items-center gap-2">
      <%= f.text_field :name, placeholder: 'Name', class: 'w-full p-2 space-y-2' %>
      <%= f.number_field :amount, step: 0.01, placeholder: 'Amount', class: 'w-full p-2'  %>
      <%= f.collection_select :category, Category.where(user: current_user), :id, :name, {prompt: 'Select a category'}, class: 'w-full p-2' %>
    </div>
    <div class="bg-[#5fb523] text-white py-2 text-center flex w-full">
      <%= f.submit 'SAVE' , class: 'border border-solid border-white mx-2 py-2 w-full hover:text-amber-300'%>
    </div>
  <% end %>

</div>
