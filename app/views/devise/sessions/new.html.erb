<div class="w-full flex flex-col items-center relative">
  <div class="bg-[#3778c2] text-white flex justify-between p-2 items-center w-full">
    <span class="w-5 h-5">
      <%= link_to('/') do %>
      <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75"></path>
      </svg>
      <% end %>
    </span>
    <h2 class="font-weight-bold">LOGIN</h2>
    <span class="w-3"></span>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'w-full relative'}) do |f| %>
    <div class="flex flex-col w-full gap-2 rounded relative">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'w-full p-2' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'w-full p-2' %>
      </div>

      <div class="actions absolute right-1 -top-8 text-white cursor-pointer hover:text-amber-400">
        <%= f.submit "Log in" %>
      </div>
    </div>
  <% end %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-center mt-2' %>
  <span class="bg-gray-300 absolute inset-0 -z-10"></span>
</div>
